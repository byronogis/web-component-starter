{
  "name": "web-component-starter",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@8.6.12",
  "description": "",
  "author": "Byron",
  "license": "MIT",
  "funding": "https://github.com/sponsors/byronogis",
  "homepage": "https://github.com/byronogis/web-component-starter#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/byronogis/web-component-starter.git"
  },
  "bugs": "https://github.com/byronogis/web-component-starter/issues",
  "keywords": [
    "web-component"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./components": {
      "import": "./dist/components/index.mjs",
      "require": "./dist/components/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite serve playground",
    "build": "unbuild",
    "build:dev": "vite build playground --outDir playground/dist",
    "deploy:dev": "pnpm build:dev && gh-pages -d playground/dist && rimraf playground/dist",
    "release": "pnpm build && bumpp && npm publish",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "lit": "^2.8.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.41.0",
    "@types/node": "^20.6.0",
    "bumpp": "^9.2.0",
    "eslint": "^8.49.0",
    "gh-pages": "^6.0.0",
    "lint-staged": "^14.0.1",
    "rimraf": "^5.0.1",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.2.2",
    "unbuild": "^2.0.0",
    "vite": "^4.4.9"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
